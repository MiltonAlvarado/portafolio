---
const nombre = "MILTON ALVARADO";
const resumen = `Desarrollador con enfoque en diseño limpio, arquitectura lógica y eficiencia técnica. 
Me interesa que cada proyecto transmita claridad, seguridad y profesionalismo desde el primer contacto.`;
const foto = "/yo.jpg"; 
---
<section class="hero">
  <div class="hero__content">
    <h1>{nombre}</h1>
    <p>{resumen}</p>
    <div class="dots">
      <span class="dot dot--red"></span>
      <span class="dot dot--yellow"></span>
      <span class="dot dot--green"></span>
    </div>
  </div>
  <div class="hero__avatar">
    <img src={foto} alt="Foto de perfil" />
  </div>
</section>
